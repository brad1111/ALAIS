        elif [[ $timezone == Iran ]]; then BOOL_MENUCOMPLETE=TRUE
        #elif [[ $timezone == iso3166.tab ]]; then BOOL_MENUCOMPLETE=TRUE
        elif [[ $timezone == Israel ]]; then BOOL_MENUCOMPLETE=TRUE
        elif [[ $timezone == Jamaica ]]; then BOOL_MENUCOMPLETE=TRUE
